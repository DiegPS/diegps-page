---
const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="footer-content">
    <div class="footer-section">
      <p class="footer-text">
        © {currentYear} Diego Pahua Silvan. Desarrollado con ❤️ usando Astro.
      </p>
    </div>
    
    <div class="footer-section">
      <div class="social-links">
        <a 
          href="https://linkedin.com/in/diegps" 
          target="_blank" 
          rel="noopener noreferrer"
          aria-label="LinkedIn de Diego Pahua Silvan"
        >
          LinkedIn
        </a>
        <a 
          href="https://github.com/diegps" 
          target="_blank" 
          rel="noopener noreferrer"
          aria-label="GitHub de Diego Pahua Silvan"
        >
          GitHub
        </a>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    margin-top: auto;
    padding: var(--space-8) var(--space-4);
    border-top: 1px solid var(--color-surface-light);
  }

  .footer-content {
    max-width: 900px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--space-4);
  }

  .footer-section {
    flex: 1;
  }

  .footer-text {
    color: var(--color-text-secondary);
    font-size: var(--font-size-sm);
    margin: 0;
    text-align: center;
  }

  .social-links {
    display: flex;
    justify-content: center;
    gap: var(--space-6);
  }

  .social-links a {
    color: var(--color-text-secondary);
    text-decoration: none;
    font-weight: 500;
    font-size: var(--font-size-sm);
    transition: all var(--transition-fast);
    padding: var(--space-1) var(--space-2);
    border-radius: var(--radius-sm);
  }

  .social-links a:hover {
    color: var(--color-primary);
    background-color: var(--color-surface-light);
    transform: translateY(-1px);
  }

  .social-links a:focus-visible {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
    background-color: var(--color-surface-light);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .footer {
      padding: var(--space-6) var(--space-3);
    }

    .footer-content {
      flex-direction: column;
      gap: var(--space-4);
      text-align: center;
    }

    .footer-text {
      font-size: var(--font-size-xs);
    }

    .social-links {
      gap: var(--space-4);
    }

    .social-links a {
      font-size: var(--font-size-xs);
    }
  }

  @media (max-width: 480px) {
    .footer {
      padding: var(--space-4) var(--space-2);
    }

    .social-links {
      gap: var(--space-3);
    }
  }

  /* High contrast mode */
  @media (prefers-contrast: high) {
    .footer {
      border-top-width: 2px;
    }

    .social-links a {
      border: 1px solid transparent;
    }

    .social-links a:hover {
      border-color: var(--color-primary);
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .social-links a {
      transition: none;
    }

    .social-links a:hover {
      transform: none;
    }
  }

  /* Print styles */
  @media print {
    .footer {
      background-color: white;
      border-top: 1px solid #000;
    }

    .footer-text {
      color: #000;
    }

    .social-links a {
      color: #000;
    }
  }
</style>
