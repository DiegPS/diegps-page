---
import SocialSection from "../components/SocialSection.astro";
import MexicoIcon from "./icons/MexicoIcon.astro";
---

<header class="hero-section">
  <div class="hero-container">
    <div class="hero-image">
      <img
        src="/picture.webp"
        alt="Diego Pahua Silvan - Desarrollador Full Stack"
        width="200"
        height="200"
        loading="eager"
      />
    </div>
    
    <div class="hero-content">
      <h1 class="hero-title">Diego Pahua Silvan</h1>
      <h2 class="hero-subtitle">Full Stack Developer</h2>
      
      <div class="hero-location">
        <MexicoIcon aria-hidden="true" />
        <span>Tabasco, México</span>
      </div>
      
      <p class="hero-description">
        Apasionado desarrollador web full stack especializado en crear experiencias digitales excepcionales. 
        Experto en tecnologías modernas y mejores prácticas de desarrollo.
      </p>
      
      <SocialSection />
    </div>
  </div>
</header>

<style>
  .hero-section {
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-8) 0;
    position: relative;
  }

  .hero-container {
    display: flex;
    align-items: center;
    gap: var(--space-12);
    max-width: 900px;
    width: 100%;
    padding: 0 var(--space-4);
  }

  .hero-image {
    flex-shrink: 0;
    position: relative;
  }

  .hero-image::before {
    content: '';
    position: absolute;
    top: -8px;
    left: -8px;
    right: -8px;
    bottom: -8px;
    background: linear-gradient(45deg, var(--color-primary), var(--color-secondary));
    border-radius: 50%;
    z-index: -1;
    opacity: 0.3;
    transition: opacity var(--transition-normal);
  }

  .hero-image:hover::before {
    opacity: 0.5;
  }

  .hero-image img {
    width: 200px;
    height: 200px;
    border-radius: 50%;
    object-fit: cover;
    border: 4px solid var(--color-surface);
    transition: transform var(--transition-normal);
  }

  .hero-image:hover img {
    transform: scale(1.05);
  }

  .hero-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  .hero-title {
    font-size: var(--font-size-6xl);
    font-weight: 800;
    color: var(--color-primary);
    line-height: 1.1;
    letter-spacing: -0.025em;
    margin: 0;
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: var(--font-size-3xl);
    font-weight: 600;
    color: var(--color-text);
    margin: 0;
    opacity: 0.9;
  }

  .hero-location {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    color: var(--color-text-secondary);
    font-size: var(--font-size-lg);
    font-weight: 500;
  }

  .hero-description {
    font-size: var(--font-size-lg);
    line-height: 1.7;
    color: var(--color-text-secondary);
    max-width: 500px;
    margin: 0;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .hero-section {
      min-height: 70vh;
      padding: var(--space-6) 0;
    }

    .hero-container {
      flex-direction: column;
      text-align: center;
      gap: var(--space-8);
      padding: 0 var(--space-3);
    }

    .hero-title {
      font-size: var(--font-size-4xl);
    }

    .hero-subtitle {
      font-size: var(--font-size-2xl);
    }

    .hero-description {
      font-size: var(--font-size-base);
    }

    .hero-image img {
      width: 150px;
      height: 150px;
    }
  }

  @media (max-width: 480px) {
    .hero-section {
      min-height: 60vh;
      padding: var(--space-4) 0;
    }

    .hero-container {
      padding: 0 var(--space-2);
      gap: var(--space-6);
    }

    .hero-title {
      font-size: var(--font-size-3xl);
    }

    .hero-subtitle {
      font-size: var(--font-size-xl);
    }

    .hero-image img {
      width: 120px;
      height: 120px;
    }

    .hero-location {
      font-size: var(--font-size-base);
    }
  }

  /* Animation for hero content */
  @media (prefers-reduced-motion: no-preference) {
    .hero-content > * {
      animation: fadeInUp 0.6s ease-out forwards;
      opacity: 0;
      transform: translateY(20px);
    }

    .hero-title {
      animation-delay: 0.1s;
    }

    .hero-subtitle {
      animation-delay: 0.2s;
    }

    .hero-location {
      animation-delay: 0.3s;
    }

    .hero-description {
      animation-delay: 0.4s;
    }

    .hero-content > *:last-child {
      animation-delay: 0.5s;
    }
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* High contrast mode */
  @media (prefers-contrast: high) {
    .hero-image::before {
      opacity: 0.8;
    }

    .hero-title {
      -webkit-text-fill-color: var(--color-primary);
      background: none;
    }
  }

  /* Print styles */
  @media print {
    .hero-section {
      min-height: auto;
      padding: var(--space-4) 0;
    }

    .hero-image::before {
      display: none;
    }

    .hero-image img {
      border: 2px solid #000;
    }
  }
</style>
