---
const { post } = Astro.props;
---

<a href={`blog/${post.slug}`}>
    <article>
        <h3>{post.data.title}</h3>
        <p>{post.data.description}</p>
    </article>
</a>

<style>
    p {
        font-weight: 400;
    }
    article {
        padding: 1.5rem;
        display: flex;
        flex-direction: column;
        min-height: 10rem;
        border-radius: 5px;
        box-shadow: 0px 1px 8px rgba(0, 0, 0, 0.251);
    }
    article:hover {
        transition: all 0.2s ease-in-out;
    }
    a {
        color: var(--text-dark);
        font-size: 1.3rem;
        font-weight: bold;
    }
    a:hover {
        transition: all 0.2s ease-in-out;
        color: var(--accent-color);
        background-color: #17b8900b;
    }
</style>
