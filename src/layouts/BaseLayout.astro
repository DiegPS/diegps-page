---
import Footer from "../components/Footer.astro";
import Navigation from "../components/Navigation.astro";
const { pageTitle } = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Portafolio y Blog de Diego Pahua Silvan, apasionado desarrollador web full stack. Expertise en HTML, CSS, JavaScript, Java, Python, Django, Next.js, Laravel, PHP, Angular, React, Vue, Spring Boot, Hibernate, JSP, JPA, Flask, FastAPI. Combina innovación y perfección técnica para construir experiencias web excepcionales."
    />

    <meta name="author" content="Diego Pahua Silvan" />
    <meta
      name="keywords"
      content="Portfolio, Desarrollador Web, FullStack, Diego Pahua Silvan"
    />

    <meta
      property="og:title"
      content="Diego Pahua Silvan - Desarrollador Web FullStack"
    />
    <meta property="og:site_name" content="DiegPS.com" />
    <meta property="og:url" content="https://www.diegps.com/" />
    <meta
      property="og:description"
      content="Portafolio y Blog de Diego Pahua Silvan, apasionado desarrollador web full stack. Expertise en HTML, CSS, JavaScript, Java, Python, Django, Next.js, Laravel, PHP, Angular, React, Vue, Spring Boot, Hibernate, JSP, JPA, Flask, FastAPI. Combina innovación y perfección técnica para construir experiencias web excepcionales."
    />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="/og-image.webp" />
    <title>{pageTitle} - Porfolio Desarrollador Web FullStack</title>
  </head>
  <body>
    <div class="absolute-element"></div>
    <div class="absolute-element-left"></div>
    <Navigation />
    <slot />
    <Footer />
    <style is:global>
      .absolute-element {
        position: fixed;
        z-index: -1;
        bottom: 0;
        right: -10%;
        top: -10%;
        height: 500px;
        width: 500px;
        border-radius: 50%;
        background: radial-gradient(
          circle farthest-side,
          rgba(0, 200, 255, 0.15),
          rgba(255, 255, 255, 0)
        );
      }
      .absolute-element-left {
        position: fixed;
        z-index: -1;
        bottom: 0%;
        left: -10%;
        height: 500px;
        width: 500px;
        border-radius: 50%;
        background: radial-gradient(
          circle farthest-side,
          rgba(0, 255, 242, 0.15),
          rgba(255, 255, 255, 0)
        );
      }
      :root {
        --background-color: #0b0d13;
        --text-color: #f2f7f2;
        --accent-color: #17b890;
        --accent-color-secondary: #4d7aff;
      }
      *,
      *::before,
      *::after {
        box-sizing: border-box;
      }
      * {
        margin: 0;
        padding: 0;
      }
      h2 {
        color: var(--accent-color);
        margin: 0.8rem 0rem 0.8rem 0rem;
      }
      h3 {
        margin: 0.7rem 0rem 0.7rem 0rem;
        font-size: 24px;
      }
      p {
        text-wrap: pretty;
        margin-bottom: 0.5rem;
        margin-top: 0.5rem;
        font-size: 16px;
      }

      body {
        max-width: 900px;
        margin: 0 auto;
        background-color: var(--background-color);
        color: var(--text-color);
        font-family: system-ui, sans-serif;
        letter-spacing: 1px;
        font-size: 16px;
      }

      a {
        letter-spacing: 1.2px;
        text-decoration: none;
      }
      a {
        color: var(--text-dark);
        text-decoration: none;
      }
      a:visited {
        color: var(--text-dark);
      }

      pre {
        background-color: #1e1e1e;
        color: #fff;
        padding: 1rem;
        border-radius: 5px;
        overflow-x: auto;
      }
      body {
        scroll-behavior: smooth;
      }

      @media (max-width: 900px) {
        .absolute-element {
          display: none;
        }
      }
    </style>
  </body>
</html>
