---
import Footer from "../components/Footer.astro";
import Navigation from "../components/Navigation.astro";
const { pageTitle } = Astro.props;
import { ViewTransitions } from "astro:transitions";
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Portafolio y Blog de Diego Pahua Silvan, apasionado desarrollador web full stack. Expertise en HTML, CSS, JavaScript, Java, Python, Django, Next.js, Laravel, PHP, Angular, React, Vue, Spring Boot, Hibernate, JSP, JPA, Flask, FastAPI. Combina innovación y perfección técnica para construir experiencias web excepcionales."
    />

    <meta name="author" content="Diego Pahua Silvan" />
    <meta
      name="keywords"
      content="Portfolio, Desarrollador Web, FullStack, Diego Pahua Silvan"
    />

    <meta
      property="og:title"
      content="Diego Pahua Silvan - Desarrollador Web FullStack"
    />
    <meta property="og:site_name" content="DiegPS.com" />
    <meta property="og:url" content="https://www.diegps.com/" />
    <meta
      property="og:description"
      content="Portafolio y Blog de Diego Pahua Silvan, apasionado desarrollador web full stack. Expertise en HTML, CSS, JavaScript, Java, Python, Django, Next.js, Laravel, PHP, Angular, React, Vue, Spring Boot, Hibernate, JSP, JPA, Flask, FastAPI. Combina innovación y perfección técnica para construir experiencias web excepcionales."
    />
    <meta property="og:type" content="website" />
    <meta
      property="og:image"
      content="https://raw.githubusercontent.com/DiegPS/diegps-page/main/public/og-image.webp"
    />
    <title>{pageTitle} - Porfolio Desarrollador Web FullStack</title>
    <ViewTransitions />
  </head>
  <body>
    <div class="background-decoration background-decoration--right"></div>
    <div class="background-decoration background-decoration--left"></div>
    <Navigation />
    <main>
      <slot />
    </main>
    <Footer />
    
    <style is:global>
      /* CSS Custom Properties - Design System */
      :root {
        /* Colors - Accessible Palette */
        --color-primary: #17b890;
        --color-primary-light: #1ed4a8;
        --color-primary-dark: #0f8a6b;
        --color-secondary: #4d7aff;
        --color-secondary-light: #6b8fff;
        --color-secondary-dark: #3a5fd9;
        
        /* Neutral Colors */
        --color-background: #0b0d13;
        --color-background-light: #1a1d26;
        --color-surface: #14161f;
        --color-surface-light: #1e212a;
        
        --color-text: #fafffe;
        --color-text-secondary: #b8bcc8;
        --color-text-muted: #8a8f9e;
        
        /* Light Mode Colors */
        --color-background-light-mode: #fafffe;
        --color-background-light-mode-secondary: #f5f7fa;
        --color-surface-light-mode: #ffffff;
        --color-surface-light-mode-secondary: #f8fafc;
        --color-text-light-mode: #1e211e;
        --color-text-secondary-light-mode: #4a5568;
        --color-text-muted-light-mode: #718096;
        
        /* Typography Scale */
        --font-size-xs: 0.75rem;    /* 12px */
        --font-size-sm: 0.875rem;   /* 14px */
        --font-size-base: 1rem;     /* 16px */
        --font-size-lg: 1.125rem;   /* 18px */
        --font-size-xl: 1.25rem;    /* 20px */
        --font-size-2xl: 1.5rem;    /* 24px */
        --font-size-3xl: 1.875rem;  /* 30px */
        --font-size-4xl: 2.25rem;   /* 36px */
        --font-size-5xl: 3rem;      /* 48px */
        --font-size-6xl: 3.75rem;   /* 60px */
        
        /* Spacing Scale */
        --space-1: 0.25rem;   /* 4px */
        --space-2: 0.5rem;    /* 8px */
        --space-3: 0.75rem;   /* 12px */
        --space-4: 1rem;      /* 16px */
        --space-5: 1.25rem;   /* 20px */
        --space-6: 1.5rem;    /* 24px */
        --space-8: 2rem;      /* 32px */
        --space-10: 2.5rem;   /* 40px */
        --space-12: 3rem;     /* 48px */
        --space-16: 4rem;     /* 64px */
        --space-20: 5rem;     /* 80px */
        
        /* Border Radius */
        --radius-sm: 0.25rem;
        --radius-md: 0.375rem;
        --radius-lg: 0.5rem;
        --radius-xl: 0.75rem;
        --radius-2xl: 1rem;
        --radius-full: 9999px;
        
        /* Shadows */
        --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
        --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        
        /* Transitions */
        --transition-fast: 150ms ease-in-out;
        --transition-normal: 250ms ease-in-out;
        --transition-slow: 350ms ease-in-out;
        
        /* Z-index Scale */
        --z-dropdown: 1000;
        --z-sticky: 1020;
        --z-fixed: 1030;
        --z-modal-backdrop: 1040;
        --z-modal: 1050;
        --z-popover: 1060;
        --z-tooltip: 1070;
      }

      /* Light Mode Overrides */
      @media (prefers-color-scheme: light) {
        :root {
          --color-background: var(--color-background-light-mode);
          --color-background-light: var(--color-background-light-mode-secondary);
          --color-surface: var(--color-surface-light-mode);
          --color-surface-light: var(--color-surface-light-mode-secondary);
          --color-text: var(--color-text-light-mode);
          --color-text-secondary: var(--color-text-secondary-light-mode);
          --color-text-muted: var(--color-text-muted-light-mode);
        }
      }

      /* Reset and Base Styles */
      *,
      *::before,
      *::after {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      html {
        scroll-behavior: smooth;
        font-size: 16px;
      }

      body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        background-color: var(--color-background);
        color: var(--color-text);
        line-height: 1.6;
        font-size: var(--font-size-base);
        letter-spacing: 0.025em;
        max-width: 1200px;
        margin: 0 auto;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }

      main {
        flex: 1;
        width: 100%;
        max-width: 900px;
        margin: 0 auto;
        padding: 0 var(--space-4);
      }

      /* Typography */
      h1, h2, h3, h4, h5, h6 {
        font-weight: 700;
        line-height: 1.2;
        color: var(--color-text);
        margin-bottom: var(--space-4);
      }

      h1 {
        font-size: var(--font-size-5xl);
        letter-spacing: -0.025em;
      }

      h2 {
        font-size: var(--font-size-4xl);
        color: var(--color-primary);
        margin-bottom: var(--space-6);
      }

      h3 {
        font-size: var(--font-size-2xl);
        margin-bottom: var(--space-4);
      }

      h4 {
        font-size: var(--font-size-xl);
        margin-bottom: var(--space-3);
      }

      p {
        margin-bottom: var(--space-4);
        font-size: var(--font-size-base);
        line-height: 1.7;
        color: var(--color-text-secondary);
      }

      /* Links */
      a {
        color: var(--color-primary);
        text-decoration: none;
        transition: color var(--transition-fast);
        letter-spacing: 0.025em;
      }

      a:hover {
        color: var(--color-primary-light);
      }

      a:focus-visible {
        outline: 2px solid var(--color-primary);
        outline-offset: 2px;
        border-radius: var(--radius-sm);
      }

      /* Images */
      img {
        max-width: 100%;
        height: auto;
        display: block;
      }

      /* Code Blocks */
      pre {
        background-color: var(--color-surface);
        color: var(--color-text);
        padding: var(--space-4);
        border-radius: var(--radius-lg);
        overflow-x: auto;
        border: 1px solid var(--color-surface-light);
        margin: var(--space-6) 0;
      }

      code {
        background-color: var(--color-surface);
        color: var(--color-primary);
        padding: var(--space-1) var(--space-2);
        border-radius: var(--radius-sm);
        font-size: 0.875em;
        font-family: 'JetBrains Mono', 'Fira Code', 'Monaco', 'Consolas', monospace;
      }

      pre code {
        background: none;
        padding: 0;
        color: inherit;
      }

      /* Background Decorations */
      .background-decoration {
        position: fixed;
        z-index: -1;
        width: 500px;
        height: 500px;
        border-radius: 50%;
        opacity: 0.1;
        filter: blur(40px);
      }

      .background-decoration--right {
        top: -10%;
        right: -10%;
        background: radial-gradient(
          circle farthest-side,
          var(--color-primary),
          transparent
        );
      }

      .background-decoration--left {
        bottom: -10%;
        left: -10%;
        background: radial-gradient(
          circle farthest-side,
          var(--color-secondary),
          transparent
        );
      }

      /* Responsive Design */
      @media (max-width: 768px) {
        :root {
          --font-size-5xl: 2.5rem;
          --font-size-4xl: 2rem;
          --font-size-3xl: 1.75rem;
          --font-size-2xl: 1.5rem;
        }

        body {
          font-size: var(--font-size-sm);
        }

        main {
          padding: 0 var(--space-3);
        }

        .background-decoration {
          display: none;
        }
      }

      @media (max-width: 480px) {
        main {
          padding: 0 var(--space-2);
        }
      }

      /* Focus Management */
      *:focus-visible {
        outline: 2px solid var(--color-primary);
        outline-offset: 2px;
        border-radius: var(--radius-sm);
      }

      /* Reduced Motion */
      @media (prefers-reduced-motion: reduce) {
        *,
        *::before,
        *::after {
          animation-duration: 0.01ms !important;
          animation-iteration-count: 1 !important;
          transition-duration: 0.01ms !important;
        }
      }

      /* Print Styles */
      @media print {
        .background-decoration {
          display: none;
        }
        
        body {
          background: white;
          color: black;
        }
      }
    </style>
  </body>
</html>
